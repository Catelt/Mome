<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mome" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryVariant">@color/PrimaryVariant</item>
        <item name="colorOnPrimary">@color/OnPrimary</item>
        <!-- Status bar color. -->
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowTranslucentStatus">false</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/black</item>
        <item name="android:textColor">@color/text_color</item>

        <item name="android:textViewStyle">@font/netflix_sans</item>
        <item name="fontFamily">@font/netflix_sans</item>

        <item name="windowNoTitle">true</item>
    </style>

    <style name="TabLayoutTheme" parent="@style/Theme.Mome">
        <item name="android:singleLine">true</item>
    </style>

    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="fontFamily">@font/netflix_sans</item>
    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/grey_dark_1</item>
        <item name="colorAccent">@color/grey</item>
        <item name="android:textColorAlertDialogListItem">@drawable/dialog_color_text</item>
        <item name="android:textColorSecondary">@color/grey</item>
        <item name="android:colorControlActivated">@color/white</item>
    </style>
</resources>